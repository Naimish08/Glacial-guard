{
  "name": "my-fullstack-app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "",
  "main": "index.js",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev -w server\" \"npm:start -w client\" \"cd python-service && python app.py\"",
    "install:js": "npm install && npm install --workspaces --if-present",
    "install:py": "cd python-service && pip install -r requirements.txt",
    "install:all": "npm run install:js && npm run install:py",
    "build:all": "npm run build --workspaces --if-present"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.10",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "all": "^0.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2"
  }
}
